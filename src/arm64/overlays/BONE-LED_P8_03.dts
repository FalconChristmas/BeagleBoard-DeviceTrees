/dts-v1/;
/plugin/;

/*
 * Annotate in /proc/device-tree/chosen that this overlay is loaded
 */
&{/chosen} {
	overlays {
		BONE-LED_P8_03 = __TIMESTAMP__;
	};
};
 
/*
 * Update the default pinmux of the pins.
 */
&bone_P8_03_pinmux {
	pinctrl-0 = <&P8_03_gpio_pin>;
};

/*
 * Enable easy LED control through sysfs (/sys/class/leds/) using gpio-leds driver
 */
&bone_led_P8_03 {
	status = "okay";
	//label = "P8_03"; // sys/class/leds/<label>
	//linux,default-trigger = "default-off";
	//gpios = <gpio_P8_03 GPIO_ACTIVE_HIGH>;
};
